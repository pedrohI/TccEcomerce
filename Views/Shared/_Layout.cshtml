<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>TCC</title>
  <style>
    body {
      background-color: #D9ECF7;
    }
  </style>

</head>

<body>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check" viewBox="0 0 16 16">
      <title>Check</title>
      <path
        d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
    </symbol>
  </svg>

  <div class="container py-3">
    <header>
      <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
        <a class="d-flex align-items-center text-dark text-decoration-none" asp-controller="Home" asp-action="Index">
          <span class="fs-2">E-commerce</span>
        </a>
        <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
          <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
              <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                  <use xlink:href="#bootstrap" />
                </svg>
              </a>
              <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a asp-controller="Home" asp-action="Produtos" class="nav-link px-2 text-dark">Produtos</a></li>
                <li><a asp-controller="Home" asp-action="MeusPedidos" class="nav-link px-2 text-dark">Meus pedidos</a>
                </li>
                <li><a asp-controller="Home" asp-action="MeusDados" class="nav-link px-2 text-dark">Meus dados</a></li>
              </ul>
              <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Pesquisar" aria-label="Search">
                <button class="btn btn-outline-success me-2" type="submit">Pesquisar</button>
              </form>
              <div class="text-end">
                <a type="button" class="btn btn-outline-primary me-2" asp-controller="forms"
                  asp-action="CadastroUsuario">cadastro</a>
                <button type="button" class="btn btn-dark">Entrar</button>
              </div>
            </div>
          </div>
        </nav>
      </div>
      <div class="container">
        <main role="main" class="pb-3">
          @RenderBody()
        </main>
      </div>

      <footer class="border-top footer text-muted">
        <div class="container">
          &copy; 2025 - TccEcomerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
      </footer>
      <script src="~/lib/jquery/dist/jquery.min.js"></script>
      <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
      <script src="~/js/site.js" asp-append-version="true"></script>
      @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
